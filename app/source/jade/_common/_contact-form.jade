    #map.contact__container-map
    .social__title FOLLOW US ON SOCIAL MEDIA
    ul.social__list
        - var social = ['twitter', 'facebook', 'youtube', 'vimeo', 'linkedin', 'google']
            each item in social
                li.social__item
                    a(href="#" class="social__link_#{item}" target="_blank").social__link= item