.contact-form__container
    .contact-form__fill Lorem ipsum dolor sit amet, consectetur 
        span.necessarily &#42; 
        | sign amentu kurmanci.
    form(action="javascript:void(null);" method="POST").contact-form
        .contact__container-label
            label(for="name").contact__label name 
            span.necessarily &#42; 
        .contact__input-container
            input(type="text" name="name" id="name").contact__input
        .contact__container-label
            label(for="email").contact__label E-MAIL ADDRESS
            span.necessarily &#42; 
        .contact__input-container
            input(type="text" name="email" id="email").contact__input
        .contact__container-label
            label(for="subject").contact__label SUBJECT
            span.necessarily &#42; 
        .contact__input-container
            input(type="text" name="subject" id="subject").contact__input
        .contact__container-label
            label(for="message").contact__label MESSAGE 
            span.necessarily &#42;
        .contact__input-container
            textarea(name="message")#message.contact__textarea
        .contact__container-captcha
            .captcha__block
            .captcha__container-entry
                .contact__container-label
                    label(for="captcha-entry").contact__label.contact__label_captcha Enter the code
                .contact__input-container
                    input(type="text" name="captcha" id="captcha-entry").contact__input.contact__input_captcha
                input(type="submit" value="Send" name="submit").contact__submit
